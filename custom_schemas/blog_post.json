{
  "type": "object",
  "title": "BlogPost",
  "properties": {
    "post_id": {
      "type": "string"
    },
    "title": {
      "type": "string",
      "maxLength": 200
    },
    "content": {
      "type": "string",
      "maxLength": 5000
    },
    "author": {
      "type": "string",
      "maxLength": 100
    },
    "category": {
      "type": "string",
      "enum": ["Technology", "Science", "Business", "Health", "Entertainment", "Sports"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "published_date": {
      "type": "string",
      "start": "2020-01-01",
      "end": "2024-12-31"
    },
    "view_count": {
      "type": "integer",
      "minimum": 0,
      "maximum": 1000000
    },
    "likes": {
      "type": "integer",
      "minimum": 0,
      "maximum": 50000
    },
    "comments_count": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5000
    },
    "is_featured": {
      "type": "boolean"
    },
    "reading_time_minutes": {
      "type": "integer",
      "minimum": 1,
      "maximum": 60
    }
  },
  "required": ["post_id", "title", "author", "published_date"]
}